<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="PetsiTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PetsiTheme.MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PetsiTheme.MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_action_bar</item>
        <item name="android:titleTextStyle">@style/PetsiTheme.MyActionBar.TitleTextStyle</item>
    </style>

    <style name="PetsiTheme.MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
</resources>